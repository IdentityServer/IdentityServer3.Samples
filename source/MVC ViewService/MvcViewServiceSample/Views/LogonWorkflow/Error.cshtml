@model IdentityServer3.Core.ViewModels.ErrorViewModel
@{
	ViewBag.Title = "Error";
}

@* This is essentially a copy of the embedded HTML that comes from IdSvr, adapted to access the Model server-side *@

<div class="page-header">
	<h1>@ViewBag.Title</h1>
</div>
<div class="row">
	<div class="col-md-6 col-sm-6">
	    <div class="alert alert-danger">
	        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
	        {
	            <div>@Model.ErrorMessage</div>
	        }
	    </div>
		<div class="request-id">Request Id: <span>@Model.RequestId</span></div>
	</div>
</div>
@section scripts{
    @Html.Partial("_RenderAngularModel")
}